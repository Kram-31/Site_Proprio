---
interface Props {
    title: string;
    image: string; // Changed from ImageMetadata for Supabase URL
    tags: string[];
    id: string;
}

const { title, image, tags, id } = Astro.props;
---

<a href={`/gallery/${id}`} class="block group relative overflow-hidden bg-black aspect-[3/4] border border-white/10 hover:border-[var(--color-primary)] transition-colors duration-500">
    <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100"
    />
    
    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
    
    <div class="absolute bottom-0 left-0 p-6 translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
        <h3 class="font-heading font-bold uppercase text-2xl md:text-3xl mb-1 text-white">
            {title}
        </h3>
        <div class="flex flex-wrap gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
            {tags.slice(0, 3).map(tag => (
                <span class="text-xs font-medium uppercase tracking-wider text-[var(--color-primary)] bg-black/50 px-2 py-1 border border-[var(--color-primary)]/30">
                    {tag}
                </span>
            ))}
        </div>
    </div>
</a>
